@model List<GiftR.MVCWeb.Models.Image>
@{
    ViewBag.Title = "AD Gallery";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="description" content="Polaroid Photobar Gallery" />
    <!-- First, add jQuery (and jQuery UI if using custom easing or animation -->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js"></script>
    <!-- Second, add the Timer and Easing plugins -->
    <script type="text/javascript" src="../../Scripts/jquery.timers-1.2.js"></script>
    <script type="text/javascript" src="../../Scripts/jquery.easing.1.3.js"></script>
    <!-- Third, add the GalleryView Javascript and CSS files -->
    <script type="text/javascript" src="../../Scripts/jquery.galleryview-3.0-dev.js"></script>
    <link type="text/css" rel="stylesheet" href="../../Content/jquery.galleryview-3.0-dev.css" />
    <script type="text/javascript">
        $(function () {
            $('#myGallery').galleryView();
        });
</script>
</head>
<body>
    <h1>
    </h1>
    <ul id="myGallery">
    @foreach( var image in Model)
    {
		<li><img src='@image.Alt' alt='@image.Title' /></li>
    }
	</ul>
    <script>

        var options = { "publisher": "3ef1067d-3d78-4de2-8e30-a03362b6b973", "position": "left", "ad": { "visible": false, "openDelay": 5, "closeDelay": 0 }, "chicklets": { "items": ["facebook", "twitter", "googleplus", "linkedin", "email"]} };
        var st_hover_widget = new sharethis.widgets.hoverbuttons(options);
        
    </script>
</body>
</html>
